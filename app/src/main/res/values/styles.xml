<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.FlashChat" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/orangeDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashStyle" parent="AppTheme.FlashChat">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="menuStyle" parent="Theme.AppCompat.Light">
        <item name="background">@color/white</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:colorControlActivated">#DF973C01</item>
        <!-- inactive thumb color -->
        <item name="colorControlNormal">#979797</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#979797</item>
    </style>

    <style name="InputsThemeDark" parent="Theme.AppCompat">
        <item name="colorBackgroundFloating">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="checkedTextViewStyle">@color/grey</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="AppButtonsTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
